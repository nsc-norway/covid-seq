process {
    time = '6h'
    // Sets smaller resources than the defaults. Can be used for testing.
    withLabel:xlarge {
        cpus = 2
        memory = '7 GB'
    }
    withLabel:large {
        cpus = 2
        memory = '7 GB'
    }
    withLabel:medium {
        cpus = 2
        memory = '7 GB'
    }
    withLabel:small {
        cpus = 2
        memory = '7 GB'
    }
    withLabel:tiny {
        cpus = 1
        memory = '2 GB'
    }
}
